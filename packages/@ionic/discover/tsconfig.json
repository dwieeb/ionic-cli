{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "outDir": "./dist",
    "pretty": true,
    "strict": true,
    "target": "es6",
    "typeRoots": [
      "../../../node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/__tests__/*.ts"
  ]
}
